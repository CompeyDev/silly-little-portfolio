---
import ProjectItem from "../../components/ProjectItem.svelte";
import Layout from "../../layouts/Layout.svelte";
const posts = await Astro.glob("./*.mdx");
---
<Layout leftAlign={true}>


	<section
		class="p-2 sm:p-2 lg:p-2 lg:py-5 font-cascadia flex flex-col sm:flex-row grid"
	>
		{
			posts.map((post) => (
				<ProjectItem
					href={`${post.url}`}
					name={`${post.frontmatter.title}`}
					description={`${post.frontmatter.publishDate}`}
				/>
			))
		}
	</section>

</Layout>